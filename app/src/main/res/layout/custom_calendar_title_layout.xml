<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:layout_marginBottom="1dp"
    android:clickable="true"
    android:paddingBottom="@dimen/calendarTitlePaddingBottom"
    android:paddingTop="@dimen/calendarTitlePaddingTop">

    <ImageView
        android:layout_marginLeft="@dimen/_20sdp"
        android:id="@+id/leftButton"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/padding"
        android:src="@drawable/drawable_left_arrow" />

    <TextView
        android:inputType="textCapSentences"
        android:id="@+id/dateTitle"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/_13ssp"
        style="@style/CalendarView.MonthTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:tag="dateTitle"
        android:text=""
         />

    <ImageView
        android:layout_marginRight="@dimen/_20sdp"
        android:id="@+id/rightButton"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"

        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/padding"
        android:src="@drawable/drawable_rightt_arrow" />
</RelativeLayout>