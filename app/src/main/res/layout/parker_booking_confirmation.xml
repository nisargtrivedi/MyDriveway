<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_above="@id/llCard"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fitsSystemWindows="true"
        android:nestedScrollingEnabled="false"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/rounded_border_bottom_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlBg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp">
        <RelativeLayout
            android:paddingBottom="@dimen/_10sdp"
            android:background="@drawable/buttom_round_transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginBottom="@dimen/_10sdp"
                android:id="@+id/rlone"
                android:translationZ="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_back_white"
                    android:id="@+id/back"
                    android:layout_height="@dimen/_20sdp"></androidx.appcompat.widget.AppCompatImageView>
                <androidx.appcompat.widget.AppCompatImageView
                    android:visibility="invisible"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_property_detail_report"
                    android:id="@+id/Report"
                    android:layout_height="@dimen/_30sdp"></androidx.appcompat.widget.AppCompatImageView>

            </RelativeLayout>
            <com.driveway.Component.TTextView
                android:layout_below="@id/rlone"
                android:id="@+id/tvPropertyTitle"
                android:paddingLeft="@dimen/_20sdp"
                android:text="UWA"
                android:layout_toLeftOf="@id/tvPropertyKM"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.driveway.Component.TTextView>

            <com.driveway.Component.TTextView
                android:layout_alignParentRight="true"
                android:layout_below="@id/rlone"
                android:id="@+id/tvPropertyKM"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="10 KM"
                android:gravity="center|left"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"></com.driveway.Component.TTextView>

            <com.driveway.Component.TTextView
                android:layout_marginTop="@dimen/_4sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:layout_below="@id/tvPropertyKM"
                android:textSize="@dimen/_11ssp"
                android:layout_width="match_parent"
                android:paddingRight="@dimen/_5sdp"
                android:layout_toLeftOf="@id/tvMinutes"
                android:drawableLeft="@drawable/drawable_location_white"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="asdasdas"
                android:maxLines="4"
                android:ellipsize="end"
                android:drawablePadding="@dimen/_3sdp"
                android:id="@+id/PropertyAddress"
                android:textColor="@color/white"
                android:textStyle="normal"></com.driveway.Component.TTextView>
            <com.driveway.Component.TTextView
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:drawableLeft="@drawable/drawable_watch_white"
                android:textSize="@dimen/_11ssp"
                android:gravity="center|left"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_below="@id/tvPropertyKM"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:id="@+id/tvMinutes"
                android:text="0 min"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"></com.driveway.Component.TTextView>

            <com.driveway.Component.TTextView
                android:layout_marginTop="@dimen/_4sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:layout_below="@id/PropertyAddress"
                android:textSize="@dimen/_12ssp"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/drawable_car_white"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="Drive Way"
                android:drawablePadding="@dimen/_3sdp"
                android:id="@+id/tvParking"
                android:textColor="@color/white"
                android:textStyle="bold"></com.driveway.Component.TTextView>

            <com.driveway.Component.TTextView
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_below="@id/PropertyAddress"
                android:textSize="@dimen/_11ssp"
                android:gravity="center|left"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:drawablePadding="@dimen/_5sdp"
                android:id="@+id/tvRatings"
                android:drawableLeft="@drawable/drawable_star_white"
                android:text="3.5"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"></com.driveway.Component.TTextView>

            <com.driveway.Component.TTextView
                android:layout_marginTop="@dimen/_4sdp"
                android:paddingLeft="@dimen/_40sdp"
                android:layout_below="@id/tvParking"
                android:textSize="@dimen/_11ssp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="80% Availability"
                android:layout_toLeftOf="@id/tvRatings"
                android:drawablePadding="@dimen/_3sdp"
                android:id="@+id/tvAvailability"
                android:textColor="@color/white"
                android:textStyle="normal"></com.driveway.Component.TTextView>

        </RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/imgMap"
        android:translationZ="@dimen/_10sdp"
        android:layout_marginTop="-15dp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_gravity="right"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_map"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"></ImageView>

    <com.driveway.Component.TTextView
        android:layout_marginTop="@dimen/_4sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_below="@id/tvParking"
        android:textSize="@dimen/_11ssp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:text="Parker Owner"
        android:layout_toLeftOf="@id/tvRatings"
        android:drawablePadding="@dimen/_3sdp"
        android:textColor="@color/button_color"
        android:textStyle="normal"></com.driveway.Component.TTextView>

    <RelativeLayout
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.driveway.Component.TTextView
            android:id="@+id/UserName"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_15ssp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center|left"
            android:text="Parker Owner"
            android:drawablePadding="@dimen/_3sdp"
            android:textColor="@color/black"
            android:textStyle="bold"></com.driveway.Component.TTextView>

        <com.driveway.Component.BButton
            android:id="@+id/btnChat"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@id/UserName"
            android:drawablePadding="@dimen/_5sdp"
            android:text="Send message"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:drawableLeft="@drawable/drawable_chat_white"
            android:background="@drawable/border_button_with_fill"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"></com.driveway.Component.BButton>
    </RelativeLayout>
    <View
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#B2B2B2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"></View>
    <RelativeLayout
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.driveway.Component.TTextView
            android:paddingLeft="@dimen/_10sdp"
            android:id="@+id/tv"
            android:textSize="@dimen/_11ssp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center|left"
            android:text="Book Park Space"
            android:drawablePadding="@dimen/_3sdp"
            android:textColor="@color/black"
            android:textStyle="normal"></com.driveway.Component.TTextView>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_centerVertical="true"
            android:id="@+id/btnQuestion"
            android:scaleType="fitCenter"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_toLeftOf="@id/btnEditBooking"
            android:layout_width="@dimen/_20sdp"
            android:src="@drawable/ic_question"
            android:layout_height="@dimen/_20sdp"></androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:id="@+id/btnEditBooking"
            android:layout_width="@dimen/_20sdp"
            android:src="@drawable/ic_edit_pencil"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/_20sdp"></androidx.appcompat.widget.AppCompatImageView>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center|left"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <com.driveway.Component.TTextView
            android:id="@+id/tvStay"
            android:text="Short Stay"
            android:paddingLeft="@dimen/_10sdp"
            android:drawablePadding="@dimen/_7sdp"
            android:gravity="center|left"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:textColor="@color/button_color"
            android:drawableLeft="@drawable/drawable_left_fill_circle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"></com.driveway.Component.TTextView>

        <com.driveway.Component.BButton
            android:id="@+id/btnMins"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingRight="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@id/UserName"
            android:drawablePadding="@dimen/_5sdp"
            android:text="60 min"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/border_button_with_fill"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"></com.driveway.Component.BButton>
    </LinearLayout>
    <LinearLayout
        android:layout_above="@id/addcard"
        android:padding="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/border_button_with_fill_fragment_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:weightSum="6.66"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"></View>

            <com.driveway.Component.TTextView
                android:layout_weight="2"
                android:textSize="@dimen/_11ssp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center|left"
                android:text="Start Date"
                android:textColor="@color/white"
                android:textStyle="normal"></com.driveway.Component.TTextView>
            <com.driveway.Component.TTextView
                android:textSize="@dimen/_11ssp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center|left"
                android:text="->"
                android:visibility="invisible"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textStyle="bold"></com.driveway.Component.TTextView>

            <com.driveway.Component.TTextView
                android:layout_weight="2"
                android:textSize="@dimen/_11ssp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center|left"
                android:text="End Date"
                android:textColor="@color/white"
                android:textStyle="normal"></com.driveway.Component.TTextView>

            <View
                android:layout_gravity="center"
                android:layout_weight="0.33"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"></View>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:weightSum="6.66"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_calendar_white"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"></androidx.appcompat.widget.AppCompatImageView>

            <com.driveway.Component.TTextView
                android:id="@+id/tvStartDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="24 july 2019"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"></com.driveway.Component.TTextView>
            <ImageView
                android:textSize="@dimen/_18ssp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/booking_detail_arrow"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textStyle="normal"></ImageView>

            <com.driveway.Component.TTextView
                android:id="@+id/tvEndDate"
                android:layout_weight="2"
                android:textSize="@dimen/_12ssp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center|left"
                android:text="24 july 2019"
                android:textColor="@color/white"
                android:textStyle="bold"></com.driveway.Component.TTextView>

            <View
                android:layout_weight="0.33"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"></View>

        </LinearLayout>

        <LinearLayout
            android:weightSum="6.66"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp">
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"></View>
            <View
                android:background="@color/white"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"></View>

            <View
                android:layout_weight="0.33"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"></View>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:weightSum="6.66"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_clock_white"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"></androidx.appcompat.widget.AppCompatImageView>

            <com.driveway.Component.TTextView
                android:id="@+id/tvTime"
                android:layout_weight="5"
                android:textSize="@dimen/_12ssp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center|left"
                android:text="24 july 2019"
                android:drawablePadding="@dimen/_3sdp"
                android:textColor="@color/white"
                android:textStyle="bold"></com.driveway.Component.TTextView>

            <View
                android:layout_weight="0.33"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"></View>

        </LinearLayout>

        <LinearLayout
            android:weightSum="6.66"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp">
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"></View>
            <View
                android:background="@color/white"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"></View>
            <View
                android:layout_weight="0.33"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:weightSum="6.66"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_dollar_white"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"></androidx.appcompat.widget.AppCompatImageView>

            <com.driveway.Component.TTextView
                android:id="@+id/tvPrice"
                android:layout_weight="5"
                android:textSize="@dimen/_15ssp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center|left"
                android:text="50"
                android:drawablePadding="@dimen/_3sdp"
                android:textColor="@color/white"
                android:textStyle="bold"></com.driveway.Component.TTextView>

            <View
                android:layout_weight="0.33"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"></View>

        </LinearLayout>



    </LinearLayout>
        <com.driveway.Component.TTextView
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_11ssp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center|left"
            android:text="Select Vehicle"
            android:drawablePadding="@dimen/_3sdp"
            android:textColor="@color/black"
            android:textStyle="bold"></com.driveway.Component.TTextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCars"
            android:minHeight="@dimen/_100sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>
        <com.driveway.Component.TTextView
            android:id="@+id/msg"
            android:visibility="gone"
            android:text="No car found"
            android:gravity="center"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            android:textColor="@color/button_color"
            android:minHeight="@dimen/_100sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.driveway.Component.TTextView>
        <View
            android:background="#B2B2B2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"></View>

    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/llCard"
        android:layout_above="@id/btnProcess"
        android:orientation="vertical"
        android:background="@drawable/add_card_round_up"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">
        <com.driveway.Component.TTextView
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:id="@+id/addcard"
            android:gravity="center"
            android:textSize="@dimen/_13ssp"
            android:text="ADD YOUR CARD DETAILS ->"
            android:layout_above="@id/btnProcess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.driveway.Component.TTextView>
        <com.driveway.Component.TTextView
            android:textColor="@color/black"
            android:id="@+id/cardHolderName"
            android:gravity="center"
            android:textSize="@dimen/_10ssp"
            android:text=""
            android:inputType="textCapSentences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.driveway.Component.TTextView>
    </LinearLayout>

        <com.driveway.Component.TTextView
            android:id="@+id/btnProcess"
            android:gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_13ssp"
            android:text="Proceed to PAY"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingRight="@dimen/_80sdp"
            android:drawableLeft="@drawable/drawable_process"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_border_up_side"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"></com.driveway.Component.TTextView>

    </RelativeLayout>


