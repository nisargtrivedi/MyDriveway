<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/rlMain"
    android:background="@drawable/rounded_border_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/Date"
        android:layout_marginLeft="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:textStyle="bold"
        android:fontFamily="@font/m_semibold"
        android:textColor="#CC575454"
        android:gravity="center|left"
        android:textSize="@dimen/_11ssp"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:background="@color/white"
        android:padding="@dimen/_12sdp"
        android:layout_below="@id/Date"
        android:id="@+id/rlNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerInParent="true"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            android:fontFamily="@font/m_semibold"
            android:background="@drawable/round_character_fill_profile"
            android:gravity="center"
            android:textAllCaps="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/UserCharacter"
            android:textColor="@color/button_color"
            android:text=""
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp" />
        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:id="@+id/UserName"
            android:text=""
            android:fontFamily="@font/m_semibold"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_toLeftOf="@id/Time"
            android:textStyle="bold"
            android:layout_toRightOf="@id/UserCharacter"
            android:textColor="@color/button_color"
            android:textSize="@dimen/_13ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/Time"
            android:fontFamily="@font/m_medium"
            android:layout_alignParentRight="true"
            android:text=""
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:textStyle="normal"
            android:textColor="#FF9F9F9F"
            android:textSize="@dimen/_10ssp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#FF363636"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text=""
            android:id="@+id/Details"
            android:fontFamily="@font/m_medium"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_toRightOf="@id/UserCharacter"
            android:layout_below="@id/UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@id/UserCharacter"
            android:layout_below="@id/Details"
            android:background="@color/quantum_black_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"></View>

    </RelativeLayout>


  </RelativeLayout>