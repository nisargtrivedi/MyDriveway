<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_centerInParent="true"
            android:id="@+id/Back"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@drawable/back_black"></androidx.appcompat.widget.AppCompatImageView>

        <com.driveway.Component.TTextView
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/Back"
            android:text="Booking Details"
            android:gravity="center|left"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toLeftOf="@id/Report"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_15ssp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"></com.driveway.Component.TTextView>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="@dimen/_30sdp"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_report_black"
            android:id="@+id/Report"
            android:layout_height="@dimen/_40sdp"></androidx.appcompat.widget.AppCompatImageView>


    </RelativeLayout>
    <RelativeLayout
        android:elevation="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:background="@drawable/rounded_border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp">
        <com.driveway.Component.TTextView
            android:id="@+id/tvUserName"
            android:paddingLeft="@dimen/_20sdp"
            android:text="John Parker"
            android:layout_toLeftOf="@id/tvChat"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.driveway.Component.TTextView>

        <com.driveway.Component.TTextView
            android:layout_below="@id/tvUserName"
            android:id="@+id/tvEmail"
            android:layout_toLeftOf="@id/tvChat"
            android:layout_marginTop="@dimen/_6sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:text="JohnParker@gmail.com"
            android:textSize="@dimen/_10ssp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.driveway.Component.TTextView>

        <com.driveway.Component.TTextView
            android:elevation="@dimen/_5sdp"
            android:id="@+id/tvChat"
            android:layout_marginRight="@dimen/_20sdp"
            android:text="Send message"
            android:textSize="@dimen/_13ssp"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/_10sdp"
            android:gravity="center"
            android:drawablePadding="@dimen/_7sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/white"
            android:background="@drawable/border_button_with_fill_fragment_three"
            android:drawableLeft="@drawable/drawable_chat_white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp">

        </com.driveway.Component.TTextView>
        <com.driveway.Component.TTextView
            android:id="@+id/tvCount"
            android:textColor="@color/black"
            android:translationZ="@dimen/_5sdp"
            android:layout_marginLeft="-40dp"
            android:layout_toRightOf="@id/tvChat"
            android:text="1"
            android:visibility="invisible"
            android:gravity="center"
            android:background="@drawable/rounded_border_white"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"></com.driveway.Component.TTextView>
    </RelativeLayout>
    <ScrollView
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:elevation="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_8sdp"

        android:background="@drawable/rounded_border_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/menu_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgone"
                android:scaleType="centerInside"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:src="@drawable/ic_location_red" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.driveway.Component.TTextView
                    android:text="Location"
                    android:textSize="@dimen/_13ssp"
                    android:paddingLeft="@dimen/_30sdp"
                    android:textColor="@color/location_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.driveway.Component.TTextView
                    android:id="@+id/PropertTitle"
                    android:text="@string/uwa_car_park"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="@dimen/_11ssp"
                    android:paddingLeft="@dimen/_30sdp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.driveway.Component.TTextView
                    android:id="@+id/tvAddress"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="@string/wa_australia"
                    android:textSize="@dimen/_11ssp"
                    android:paddingLeft="@dimen/_30sdp"
                    android:textColor="#FF575757"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:scaleType="centerInside"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:src="@drawable/ic_red_calendar" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.driveway.Component.TTextView
                    android:text="Date"
                    android:textSize="@dimen/_13ssp"
                    android:paddingLeft="@dimen/_30sdp"
                    android:textColor="@color/location_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.driveway.Component.TTextView
                    android:id="@+id/tvBookingDate"
                    android:text="24 July 2019 -> 24 July 2019"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="@dimen/_11ssp"
                    android:paddingLeft="@dimen/_30sdp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:scaleType="centerInside"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:src="@drawable/ic_time_filter" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.driveway.Component.TTextView
                    android:text="Time"
                    android:textSize="@dimen/_13ssp"
                    android:paddingLeft="@dimen/_30sdp"
                    android:textColor="@color/location_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.driveway.Component.TTextView
                    android:id="@+id/tvTime"
                    android:text="02:15 PM ——— 03:15 PM"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="@dimen/_11ssp"
                    android:paddingLeft="@dimen/_30sdp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:scaleType="centerInside"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:src="@drawable/ic_car" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.driveway.Component.TTextView
                    android:text="Parking Type"
                    android:textSize="@dimen/_13ssp"
                    android:paddingLeft="@dimen/_30sdp"
                    android:textColor="@color/location_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.driveway.Component.TTextView
                    android:id="@+id/tvParkingType"
                    android:text="Driveway"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="@dimen/_11ssp"
                    android:paddingLeft="@dimen/_30sdp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:scaleType="centerInside"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:src="@drawable/ic_booking_status" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.driveway.Component.TTextView
                    android:text="Booking Status"
                    android:textSize="@dimen/_13ssp"
                    android:paddingLeft="@dimen/_30sdp"
                    android:textColor="@color/location_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.driveway.Component.TTextView
                    android:id="@+id/tvStatus"
                    android:text="Completed"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="@dimen/_11ssp"
                    android:paddingLeft="@dimen/_30sdp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:scaleType="centerInside"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:src="@drawable/ic_dollar_blue" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.driveway.Component.TTextView
                    android:text="Payment Status"
                    android:textSize="@dimen/_13ssp"
                    android:paddingLeft="@dimen/_30sdp"
                    android:textColor="@color/location_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.driveway.Component.TTextView
                    android:id="@+id/tvPrice"
                    android:text="$50 Paid"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="@dimen/_11ssp"
                    android:paddingLeft="@dimen/_30sdp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
