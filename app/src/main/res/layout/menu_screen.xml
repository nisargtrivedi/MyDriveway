<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mainBg"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <com.driveway.Component.TTextView
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:inputType="textCapSentences"
            android:id="@+id/appname"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.driveway.Component.TTextView
            android:id="@+id/tvCurrentUser"
            android:text=""
            android:textStyle="normal"
            android:textSize="@dimen/_9ssp"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_toRightOf="@id/appname"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:paddingRight="@dimen/_12sdp"
            android:paddingLeft="@dimen/_12sdp"
            android:background="@drawable/round_fill_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgClose"
            android:src="@drawable/ic_close"
            android:layout_marginRight="@dimen/_7sdp"
            android:scaleType="center"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp" />
    </RelativeLayout>
    <View
        android:background="@color/border_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp" />

    <RelativeLayout
        android:id="@+id/rlSwitch"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.driveway.Component.TTextView
            android:layout_centerInParent="true"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:background="@drawable/round_character_fill_menu"
            android:gravity="center"
            android:textAllCaps="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/UserCharacter"
            android:textColor="@color/white"
            android:text=""
            android:layout_width="@dimen/_27sdp"
            android:layout_height="@dimen/_27sdp" />
        <com.driveway.Component.TTextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:id="@+id/username"
            android:text=""
            android:layout_toLeftOf="@id/btnSwitchAccount"
            android:textStyle="normal"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/UserCharacter"
            android:textColor="@color/user_name_color_menu"
            android:textSize="@dimen/_13ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.driveway.Component.TTextView
            android:id="@+id/btnSwitchAccount"
            android:drawableLeft="@drawable/drawable_left_switch_arrow"
            android:textStyle="normal"
            android:layout_centerInParent="true"
            android:text="Switch Account"
            android:drawablePadding="@dimen/_3sdp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/_9ssp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:paddingTop="@dimen/_7sdp"
            android:textColor="@color/white"
            android:paddingRight="@dimen/_5sdp"
            android:paddingLeft="@dimen/_6sdp"
            android:background="@drawable/round_fill_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/dividor"
        android:background="@color/border_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp" />

    <LinearLayout
        android:elevation="@dimen/_10sdp"
        android:translationZ="@dimen/_10sdp"
        android:layout_marginTop="-12dp"
        android:layout_marginBottom="-40dp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:id="@+id/rlDetails"
        android:visibility="gone"
        android:layout_below="@id/btnSwitchAccount"
        android:background="@drawable/ic_bubble"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp">

        <com.driveway.Component.TTextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_weight="1"
            android:id="@+id/owner"
            android:text="OWNER"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/border_button_with_fill"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"></com.driveway.Component.TTextView>

        <com.driveway.Component.TTextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1"
            android:id="@+id/parker"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/owner"
            android:gravity="center"
            android:text="PARKER"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp">

        </com.driveway.Component.TTextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_one"
        android:background="@drawable/menu_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/imgone"
            android:scaleType="centerInside"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:src="@drawable/ic_car" />

        <com.driveway.Component.TTextView
            android:id="@+id/tvMenuOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/menu_one"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/menu_two"
        android:background="@drawable/menu_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:scaleType="centerInside"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:src="@drawable/ic_booking" />

        <com.driveway.Component.TTextView
            android:id="@+id/tvMenuBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/menu_two"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/menu_three"
        android:background="@drawable/menu_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/imgnotification"
            android:scaleType="centerInside"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:src="@drawable/ic_notification" />

        <com.driveway.Component.TTextView
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/imgnotification"
            android:layout_toLeftOf="@id/notification_switch"
            android:id="@+id/tvMenuNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/menu_three"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />

        <androidx.appcompat.widget.SwitchCompat
            app:trackTint="@color/switch_color"
            android:background="@drawable/rounded_switch"
            app:thumbTint="@color/white"
            android:checked="true"
            android:layout_centerInParent="true"
            android:id="@+id/notification_switch"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:scaleType="centerInside"
            android:paddingRight="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/menu_four"
        android:background="@drawable/menu_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:scaleType="centerInside"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_setting" />

        <com.driveway.Component.TTextView
            android:id="@+id/tvSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/menu_five"
        android:background="@drawable/menu_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:scaleType="centerInside"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:src="@drawable/ic_share" />

        <com.driveway.Component.TTextView
            android:id="@+id/tvShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/share_in_my_driveway"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />
    </LinearLayout>
    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/menu_six"
        android:background="@drawable/menu_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:scaleType="centerInside"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:src="@drawable/ic_logout" />

        <com.driveway.Component.TTextView
            android:id="@+id/tvLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/logout"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />
    </LinearLayout>



</LinearLayout>