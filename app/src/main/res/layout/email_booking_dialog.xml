<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:id="@+id/llFilter"
    android:elevation="@dimen/_10sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/rounded_border_up_side_white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/close"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/_20sdp"
            android:src="@drawable/close"
            android:scaleType="centerInside"
            android:layout_height="@dimen/_20sdp"></androidx.appcompat.widget.AppCompatImageView>
        <com.driveway.Component.TTextView
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/close"
            android:textColor="@color/button_color"
            android:textStyle="bold"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_14ssp"
            android:text="Email Booking History"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.driveway.Component.TTextView>
    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="#B2B2B2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"></View>
    <LinearLayout
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.driveway.Component.TTextView
            android:textSize="@dimen/_13ssp"
            android:text="Email"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.driveway.Component.TTextView>
        <LinearLayout
            android:weightSum="3"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.driveway.Component.EEditText
                android:id="@+id/edtEmail"
                android:singleLine="true"
                android:layout_weight="2"
                android:textColor="#7C7C7C"
                android:textSize="@dimen/_12ssp"
                android:paddingLeft="@dimen/_5sdp"
                android:textColorHint="#7C7C7C"
                android:hint="abc@gmail.com"
                android:background="@drawable/round_booking_owner_email"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_height="@dimen/_40sdp">

            </com.driveway.Component.EEditText>
            <com.driveway.Component.BButton
                android:id="@+id/btnSend"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/rounded_border"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="@string/send_now"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp">

            </com.driveway.Component.BButton>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
</LinearLayout>