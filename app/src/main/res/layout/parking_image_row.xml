<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.driveway.Component.RoundCornersImageView
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/img"
        android:src="@drawable/car_img"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"></com.driveway.Component.RoundCornersImageView>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_toLeftOf="@id/llview"
        android:layout_below="@id/img"
        android:translationZ="@dimen/_10sdp"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:src="@drawable/ic_delete_photo"
        android:id="@+id/img_delete"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"></androidx.appcompat.widget.AppCompatImageView>
    <View
        android:id="@+id/llview"
        android:layout_centerHorizontal="true"
        android:layout_width="1dp"
        android:layout_height="wrap_content"></View>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_below="@id/img"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_toRightOf="@id/llview"
        android:translationZ="@dimen/_10sdp"
        android:layout_marginTop="-20dp"
        android:src="@drawable/ic_edit_photo"
        android:id="@+id/img_edit"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"></androidx.appcompat.widget.AppCompatImageView>

</RelativeLayout>