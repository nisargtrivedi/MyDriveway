<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_left"
            android:id="@+id/back"
            android:layout_height="@dimen/_25sdp"></androidx.appcompat.widget.AppCompatImageView>
        <com.driveway.Component.TTextView
            android:id="@+id/Title"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/back"
            android:text="Invite Friends"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.driveway.Component.TTextView>
        <ImageView
            android:id="@+id/selectall"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_toLeftOf="@id/send"
            android:src="@drawable/ic_select_all"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"></ImageView>
        <ImageView
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:id="@+id/send"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_send_black"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"></ImageView>
    </RelativeLayout>
    <EditText
        android:id="@+id/edtSearch"
        android:singleLine="true"
        android:textSize="@dimen/_14ssp"
        android:paddingLeft="@dimen/_10sdp"
        android:hint="Search..."
        android:paddingRight="@dimen/_10sdp"
        android:drawableRight="@drawable/drawable_glass"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/search_friend"
        android:textStyle="normal"
        android:fontFamily="@font/m_medium"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"></EditText>
   <ListView
       android:divider="@color/white"
       android:dividerHeight="0dp"
       android:id="@+id/lvFriends"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   </ListView>
</LinearLayout>