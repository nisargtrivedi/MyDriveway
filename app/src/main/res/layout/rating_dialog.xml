<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:paddingBottom="@dimen/_10sdp"
    android:id="@+id/llFilter"
    android:elevation="@dimen/_10sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/close"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/_20sdp"
            android:src="@drawable/close"
            android:scaleType="centerInside"
            android:layout_height="@dimen/_20sdp"></androidx.appcompat.widget.AppCompatImageView>
        <com.driveway.Component.TTextView
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/close"
            android:textColor="@color/button_color"
            android:textStyle="bold"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_14ssp"
            android:text="Add Rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.driveway.Component.TTextView>
    </RelativeLayout>
    <View
        android:background="#B2B2B2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"></View>
    <LinearLayout
        android:layout_margin="@dimen/_15sdp"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/ic_rate"
            android:id="@+id/rateOne"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_25sdp">

        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/ic_rate"
            android:id="@+id/rateTwo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_25sdp">

        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/ic_rate"
            android:id="@+id/rateThree"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_25sdp">

        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/ic_rate"
            android:id="@+id/rateFour"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_25sdp">

        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/ic_rate"
            android:id="@+id/rateFive"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_25sdp">

        </androidx.appcompat.widget.AppCompatImageView>


    </LinearLayout>
    <com.driveway.Component.BButton
        android:id="@+id/btnRate"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_13ssp"
        android:layout_gravity="center"
        android:text="Rate Now"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:background="@drawable/border_button_with_fill"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp">

    </com.driveway.Component.BButton>
</LinearLayout>
</LinearLayout>