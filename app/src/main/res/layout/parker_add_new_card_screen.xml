<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_20sdp"
            android:src="@drawable/ic_left"
            android:id="@+id/back"
            android:layout_height="@dimen/_20sdp"></androidx.appcompat.widget.AppCompatImageView>
        <com.driveway.Component.TTextView
            android:paddingLeft="@dimen/_20sdp"
            android:layout_toRightOf="@id/back"
            android:text="Add New Card"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.driveway.Component.TTextView>
    </RelativeLayout>
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:src="@drawable/card_sample"
        android:layout_height="@dimen/_130sdp"></androidx.appcompat.widget.AppCompatImageView>


    <com.driveway.Component.TTextView
        android:textColor="#FF4B4B4B"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:textSize="@dimen/_13ssp"
        android:text="Card Holder Name *"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.driveway.Component.TTextView>

    <com.driveway.Component.EEditText
        android:inputType="textCapSentences"
        android:id="@+id/edtCardHolderName"
        android:textColor="#FF4B4B4B"
        android:nextFocusDown="@id/edtCardNo_One"
        android:singleLine="true"
        android:textStyle="normal"
        android:paddingLeft="@dimen/_10sdp"
        android:background="@drawable/round_card_editext"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"></com.driveway.Component.EEditText>
        <com.driveway.Component.TTextView
            android:textColor="#FF4B4B4B"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:textSize="@dimen/_13ssp"
            android:text="Card Number *"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.driveway.Component.TTextView>

        <LinearLayout
        android:background="@drawable/round_card_editext"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <com.driveway.Component.TTextView
            android:layout_width="0dp"
            android:text="VISA"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="@dimen/_13ssp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="#FF4B4B4B"
            android:textStyle="bold"
            android:layout_height="@dimen/_40sdp"></com.driveway.Component.TTextView>
        <com.driveway.Component.EEditText
            android:id="@+id/edtCardNo_One"
            android:hint="****"
            android:nextFocusRight="@id/edtCardNo_Two"
            android:maxLength="4"
            android:textColor="#FF4B4B4B"
            android:singleLine="true"
            android:inputType="number"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"></com.driveway.Component.EEditText>
        <com.driveway.Component.EEditText
            android:hint="****"
            android:nextFocusRight="@id/edtCardNo_Three"
            android:id="@+id/edtCardNo_Two"
            android:maxLength="4"
            android:textColor="#FF4B4B4B"
            android:singleLine="true"
            android:inputType="number"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"></com.driveway.Component.EEditText>
        <com.driveway.Component.EEditText
            android:hint="****"
            android:nextFocusRight="@id/edtCardNo_Four"
            android:id="@+id/edtCardNo_Three"
            android:maxLength="4"
            android:textColor="#FF4B4B4B"
            android:singleLine="true"
            android:inputType="number"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"></com.driveway.Component.EEditText>
        <com.driveway.Component.EEditText
            android:hint="****"
            android:id="@+id/edtCardNo_Four"
            android:maxLength="4"
            android:nextFocusDown="@id/edtExpiryDate_One"
            android:textColor="#FF4B4B4B"
            android:singleLine="true"
            android:inputType="number"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"></com.driveway.Component.EEditText>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.driveway.Component.TTextView
            android:layout_weight="1"
            android:textColor="#FF4B4B4B"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:textSize="@dimen/_12ssp"
            android:text="Expiry Date *"
            android:layout_width="0dp"
            android:layout_height="wrap_content"></com.driveway.Component.TTextView>
        <com.driveway.Component.TTextView
            android:layout_weight="1"
            android:textColor="#FF4B4B4B"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:textSize="@dimen/_12ssp"
            android:text="CVV *"
            android:layout_width="0dp"
            android:layout_height="wrap_content"></com.driveway.Component.TTextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="@dimen/_40sdp">
            <com.driveway.Component.EEditText
                android:id="@+id/edtExpiryDate_One"
                android:layout_marginLeft="@dimen/_20sdp"
                android:hint="MM"
                android:nextFocusRight="@id/edtExpiryDate_Two"
                android:maxLength="2"
                android:background="@drawable/round_card_editext"
                android:textColor="#FF4B4B4B"
                android:singleLine="true"
                android:inputType="number"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"></com.driveway.Component.EEditText>
            <View
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:background="#40A0A0A0"
                android:layout_width="1dp"
                android:layout_height="@dimen/_37sdp"></View>
            <com.driveway.Component.EEditText
                android:id="@+id/edtExpiryDate_Two"
                android:layout_marginRight="@dimen/_20sdp"
                android:hint="YY"
                android:nextFocusRight="@id/edtCardCVV"
                android:maxLength="2"
                android:background="@drawable/round_card_editext"
                android:textColor="#FF4B4B4B"
                android:singleLine="true"
                android:inputType="number"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"></com.driveway.Component.EEditText>
        </LinearLayout>
        <com.driveway.Component.EEditText
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_6sdp"
            android:hint="****"
            android:maxLength="4"
            android:id="@+id/edtCardCVV"
            android:background="@drawable/round_card_editext"
            android:textColor="#FF4B4B4B"
            android:singleLine="true"
            android:inputType="numberPassword"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"></com.driveway.Component.EEditText>
    </LinearLayout>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkDefault"
            android:textStyle="normal"
            android:textColor="#171717"
            android:fontFamily="@font/ps_regular"
            android:textSize="@dimen/_10ssp"
            android:paddingLeft="@dimen/_5sdp"
            android:button="@drawable/checkbox_filter"
            android:text="Default Card ?"
            android:layout_margin="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp">

        </androidx.appcompat.widget.AppCompatCheckBox>

    <com.driveway.Component.TTextView
        android:id="@+id/btnSave"
        android:text="SAVE CARD"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/rounded_border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"></com.driveway.Component.TTextView>

    </LinearLayout>
    </ScrollView>

</LinearLayout>