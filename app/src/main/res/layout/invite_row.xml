<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlMain"
    android:paddingLeft="@dimen/_10sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp">

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_character"
        android:fontFamily="@font/m_semibold"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="J"
        android:textSize="@dimen/_16ssp"
        android:gravity="center"
        android:background="@drawable/round_character_fill_booked_three"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"></TextView>
    <TextView
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_toLeftOf="@id/btnInvite"
        android:textSize="@dimen/_13ssp"
        android:id="@+id/tvName"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="asdasd"
        android:textColor="#575454"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_toRightOf="@id/tv_character"
        android:fontFamily="@font/m_semibold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:ellipsize="end"
        android:singleLine="true"
        android:text="asdadsa"
        android:textColor="#575454"
        android:layout_toLeftOf="@id/btnInvite"
        android:id="@+id/tvPhone"
        android:textSize="@dimen/_10ssp"
        android:layout_below="@id/tvName"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_toRightOf="@id/tv_character"
        android:fontFamily="@font/m_semibold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:textStyle="bold"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_centerVertical="true"
        android:id="@+id/btnInvite"
        android:paddingRight="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/border_button_with_fill"
        android:layout_alignParentRight="true"
        android:text="INVITE"
        android:fontFamily="@font/m_semibold"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_35sdp">

    </TextView>
    <View
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/tv_character"
        android:background="#BFBFBF"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"></View>
</RelativeLayout>